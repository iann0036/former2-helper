{
  "name": "Former2 Helper",
  "version": "1.51",
  "manifest_version": 2,
  "description": "Helps avoid CORS issues with former2.com",
  "content_security_policy": "script-src 'self'; object-src 'self'",
  "background":  {
    "scripts": [
      "aws-sdk-2.1006.0-part1.js",
      "aws-sdk-2.1006.0-part2.js",
      "aws-sdk-2.1006.0-part3.js",
      "aws-sdk-2.1006.0-part4.js",
      "aws-sdk-2.1006.0-part5.js",
      "bg.js"
    ]
  },
  "icons": {
    "128": "icon-128.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://former2.com/*",
        "https://*.former2.com/*",
        "http://127.0.0.1/*",
        "https://127.0.0.1/*",
        "http://localhost/*",
        "https://localhost/*"
      ],
      "js": [
        "content-script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "permissions": [
    "https://*.aws.amazon.com/*",
    "https://*.amazonaws.com/*",
    "https://*.amazonaws.com.cn/*",
    "https://developer.amazon.com/*"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{1f6e531d-c583-49d2-a347-e398cbd7cae6}"
    }
  }
}
